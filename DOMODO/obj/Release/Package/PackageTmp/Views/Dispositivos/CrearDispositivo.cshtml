@model IEnumerable<DOMODO.Models.Persona_Central>
@{
    ViewBag.Title = "Crear Dispositivo";
}

<h2>Crear Dispositivo</h2>
<!-- /@Request.ApplicationPath.TrimEnd('/')/Dispositivos/Create -->
<form action="/hackaton700do/Dispositivos/Create" method="post">
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Central</label>
            <div class="col-md-10">
                <select name="IdCentral" class="form-control">
                    @foreach (var item in Model)
                    {                        
                        <option value="@item.Central.IdCentral">@item.Central.Nombre</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Nombre Dispositivo</label>
            <div class="col-md-10">
                <input type="text" name="Nombre" class="form-control"/>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Descripcion</label>
            <div class="col-md-10">
                <input type="text" name="Descripcion" class="form-control"/>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Identificador</label>
            <div class="col-md-10">
                <input type="text" name="Identificador" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>

</form>

<div>
    @Html.ActionLink("Volver", "TodosDispositivos", "Dispositivos", new { Id = 1 }, null)
</div>
